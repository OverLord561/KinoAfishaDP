<!DOCTYPE html>
<html lang="ua">
<head>
    <meta charset="utf-8" />

    @Scripts.Render("~/bundles/jquery")



    <title>@ViewBag.Title - My ASP.NET MVC Application</title>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
     
    @Styles.Render("~/Content/css")
   <link rel="stylesheet" href="~/Content/bootstrap.min.css"/>
    @Scripts.Render("~/bundles/modernizr")
   
    @if (IsSectionDefined("Owl"))
    {
 @RenderSection("Owl") 
    }

    @if (IsSectionDefined("Commentstyle"))
    {
 @RenderSection("Commentstyle") 
    }


    <script type="text/javascript" src="~/Content/js/script.js"></script>
    

    @*Відповідає за таймпікер*@
    <link rel="stylesheet" type="text/css" href="~/Content/js/jquery.datetimepicker.css" />
    <style type="text/css">
        .custom-date-style
        {
            background-color: red !important;
        }

        .input
        {
        }

        .input-wide
        {
            width: 500px;
        }
    </style>
    @*Відповідає за таймпікер*@

</head>

<body>
    <header>

        <div class="content-wrapper">
            @* Створю якорь*@
            <span id="top"></span>
           
            <div class="float-left">
                <a title="Кіно афіша ДП" href="/Home/Index">
                    <img src="~/Images/logo.jpg" width="150px">
                </a>
            </div>


            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                        <li>@Html.ActionLink("Сеанси", "Index", "Sessions")</li>
                        <li>@Html.ActionLink("Кінотеатри", "Index", "MovieHouses")</li>
                        <li>@Html.ActionLink("Кабінет", "Cabinet", "Home")</li>
                       
                            <li>@Html.ActionLink("Адміністратору", "AdminPanel", "Home")</li>
                       
                       
                            <li>@Html.ActionLink("Модератору", "ModeratorPanel", "Home")</li>
                       
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>
    @if (IsSectionDefined("Golos"))
    {
        @RenderSection("Golos") 
    }

    @RenderSection("scripts", required: false)

    <p style="margin-left: 0px;" id="back-top"><a href="#top"><span></span>Наверх</a></p>


</body>

@if (IsSectionDefined("Picker"))
{
    @RenderSection("Picker") 
}
@if (IsSectionDefined("OwlScript"))
{
    @RenderSection("OwlScript") 
}


</html>
