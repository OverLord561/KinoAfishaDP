@model IEnumerable<KinoAfishaDP.Models.UserPhoto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (@Html.BeginForm())
{
     <label>Ім'я користувача</label> @Html.TextBox("name")<br />  
    
    <input type="submit" value="Шукати" />
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
           <img width=200 height=150 src=@Html.DisplayFor(modelItem => item.Photo) alt=@item.UserName>
        </td>
        <td>
           | @Html.ActionLink("Edit", "Edit", new { id=item.UserPhotoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserPhotoId }) |
         
        </td>
    </tr>
}

</table>
